type BookVariant {
    id: Int
    book: PublishedBook
    isbn: String
    format: Format
    publishDate: String
    price: Float
}

input BookVariantInput {
    id: Int
    book: PublishedBookInput
    isbn: String
    format: Format
    publishDate: String
    price: Float
}

enum Format {
    PAPERBACK, HARDCOVER, EBOOK
}

type PublishedBook {
    title: String
    genre: Genre
    id: Int
    bookVariants: [BookVariant]!
}

input PublishedBookInput {
    title: String
    genre: Genre
    id: Int
    bookVariants: [BookVariantInput]!
}

enum Genre {
    SCIENCE_FICTION, HORROR, MYSTERY, ROMANCE, FANTASY
}

extend type Query {
    getAllBooks: [PublishedBook]!
    getBooksWithPaging(page: Int, size: Int): [PublishedBook]
    getBookById(id: Int): PublishedBook
    getBooksByAuthorNameKeyword(keyword: String, page: Int, size: Int): [PublishedBook]!

}

extend type Mutation {
    createBook(book: PublishedBookInput): Int
    deleteBookById(id: Int): Boolean
}